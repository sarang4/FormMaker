<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<title>{{page_title}}</title>
	{% stylesheets filter='cssrewrite'  
	    'bundles/formbuilderfb/css/bootstrap.css'
	    'bundles/formbuilderfb/css/general/main.css'
	    'bundles/formbuilderfb/css/general/jquery.loadmask.css'
	    'bundles/formbuilderfb/css/login/login.css'
	    'bundles/formbuilderfb/css/form/main.css'
       	%}
	    <link type="text/css" href="{{ asset_url }}" rel="stylesheet" media="screen" />
	{% endstylesheets %}

	{% javascripts 
		    'http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js'
		    'http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.3.3/underscore-min.js'
		    'http://cdnjs.cloudflare.com/ajax/libs/backbone.js/0.9.2/backbone-min.js'
		    'bundles/formbuilderfb/js/bootstrap.js'
		    'bundles/formbuilderfb/js/General/jquery.tmpl.js'
		    'bundles/formbuilderfb/js/General/jquery.loadmask.js'
		    'bundles/formbuilderfb/js/md5-min.js'
		    'bundles/formbuilderfb/js/login/login.js'
		    'bundles/formbuilderfb/js/Form/main.js'
		    'bundles/formbuilderfb/js/Form/form.js'
	%}
	    <script type="text/javascript" src="{{ asset_url }}"></script>
	{% endjavascripts %}
    </head>
    <body>
	<div class="navbar navbar-fixed-top">
	    <div class="navbar-inner">
		<div style="margin-left:20px;">
		    <a class="brand" href="/dashboard">Form Builder</a>
		</div>
		{% if user_info != null %}
		<div class="btn-group pull-right" style="margin-right: 20px;">
		    <a class="btn dropdown-toggle btn-inverse" data-toggle="dropdown" href="#"> <i class="icon-user icon-white"></i> {{user_info.name}} <span class="caret"></span></a>
		    <ul class="dropdown-menu">
			<li> <a href="/password_change">Change Password</a></li>
			<li> <a href="javascript:void(0);" onclick="window.do_logout('{{user_info.id}}');">Logout</a></li>
		    </ul>
		</div>
		{% endif %}
	    </div>
	</div>
